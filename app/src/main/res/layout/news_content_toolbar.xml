<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/toolbar_content_black_color"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:contentInsetStart="0dp"
    app:elevation="4dp"
    app:paddingEnd="0dp"
    app:paddingStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:tint="@color/finestWhite"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_toRightOf="@+id/back"
            android:id="@+id/nayn_main_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/regular" />


        <ImageView
            android:id="@+id/save_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:tint="@color/finestWhite"
            app:srcCompat="@drawable/ic_add_black_24dp" />

        <co.nayn.nayn.widgets.CustomFontTextView
            android:id="@+id/toolbar_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_toStartOf="@+id/save_later"
            android:padding="17dp"
            android:text="Sonra Oku"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:fontName="Montserrat-Bold.ttf" />

    </RelativeLayout>


</androidx.appcompat.widget.Toolbar>